# ============================================
# OPENROUTER API (FREE MODELS)
# ============================================
OPENROUTER_API_KEY=sk-or-v1-your_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model Configuration
OPENROUTER_MODEL_MAIN=meta-llama/llama-3.3-70b-instruct:free
OPENROUTER_MODEL_FAST=meta-llama/llama-3.2-3b-instruct:free
OPENROUTER_MODEL_VISION=qwen/qwen2-vl-72b-instruct:free

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL (metadata storage)
DATABASE_URL=postgresql://rag_user:your_password@localhost:5432/researchforge
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=researchforge

# ChromaDB (vector database)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=researchforge_docs

# ============================================
# LOCAL MODELS (NO API NEEDED)
# ============================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5

# ============================================
# OPTIONAL: LANGSMITH TRACING (for debugging)
# ============================================
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=lsv2_pt_your_key_here
LANGSMITH_PROJECT="ResearchForge"
